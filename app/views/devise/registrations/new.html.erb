<div class="devisePage">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :first_name, 'First Name', :class => 'devise-field' %><br />
      <em>(Will Not Display On Website)</em>
      <div>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    </div>

    <div>
      <%= f.label :last_name, 'Last Name', :class => 'devise-field' %><br />
      <em>(Will Not Display On Website)</em>
      <div>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
    </div>

    <div>
      <%= f.label :user_name, 'User Name', :class => 'devise-field' %><br />
      <em>(Displayed On Website)</em>
      <div>
        <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
      </div>
    </div>

    <div>
      <%= f.label :email, 'Email', :class => 'devise-field' %><br />
      <em>(Required - Used to Sign In)</em>
      <div>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    </div>

    <div>
      <%= f.label :password, 'Password', :class => 'devise-field' %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div>
      <%= f.label :password_confirmation, 'Password Confirmation', :class => 'devise-field' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
